
.nav .nav-logo {
  padding: 1rem 1.6rem;
}
.nav .nav-logo a {
  letter-spacing: 0.2rem;
  font-size: 2rem;
  font-weight: 700;
  font-family: var(--Lexend);
  transition: 0.5s;
}
.nav.sticky .nav-logo a {
  color: var(--white);
}
.nav .nav-list {
  margin: 0;
  padding: 0;
  display: flex;
  position: relative;
}
.nav .nav-list .nav-link {
  padding: 0 2rem;
}
.nav .nav-list .nav-link a {
  letter-spacing: 0.1rem;
  font-size: 1.1rem;
  font-family: var(--Anton);
  border-bottom: 1px solid transparent;
  transition: ease-in-out 0.2s;
}
.nav.nav.sticky .nav-list .nav-link a {
  color: var(--white);
}
.nav .nav-list .nav-link:hover a {
  color: var(--text-color);
  border-bottom: 1px solid var(--text-color);
}
.nav.sticky .nav-list .nav-link:hover a {
  border-bottom: 1px solid var(--white);
}
.nav .mode-btn {
  padding: 1rem;
}
.nav .nav-advanced {
  padding: 0;
  font-size: 1.1rem;
  font-family: var(--Anton);
}
.nav .nav-advanced .nav-inOut {
  display: flex;
  text-align: center;
}
.nav-advanced .nav-inOut .nav-link a {
  margin: 0 0.4rem;
  font-size: 1.1rem;
  position: relative;
  font-family: var(--Anton);
  transition: ease-in 0.2s;
  letter-spacing: 0.1rem;
  border-bottom: 1px solid transparent;
  transition: ease-in-out 0.2s;
}
.nav-advanced .nav-inOut .nav-link:hover a {
  border-bottom: 1px solid black;
}
.nav.sticky .nav-link a {
  color: var(--white);
}
.nav.sticky .nav-link:hover a {
  border-bottom: 1px solid var(--white);
}