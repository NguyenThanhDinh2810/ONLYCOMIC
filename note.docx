CSS:
/*-----------------------MODAL----------------------------------*/
/*Modal*/
.modal {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  display: flex;
  right: 0;
  animation: fadeIn linear 0.1s;
  display: none;
}
.modal__overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}
.modal__body {
  position: relative;
  width: 500px;
  left: 50%;
  top: 50%;
  animation: growth linear 0.1s;
  transform: translate(-50%, -50%);
  border-radius: 2px;
  z-index: 1;
}

/*Button style*/
.btn {
  min-width: 124px;
  height: 34px;
  text-decoration: none;
  border: none;
  border-radius: 4px;
  font-size: 1.5rem;
  padding: 0 5px;
  cursor: pointer;
  background-color: var(--white);
  color: var(--text-color);
  display: inline-flex;
  justify-content: center;
  align-items: center;
  line-height: 1.2rem;
  outline: none;
}
.btn.btn--normal:hover {
  background-color: rgba(0, 0, 0, 0.07);
}
.btn.btn--main {
  color: var(--white);
  background-color: #3f51b5;
} /*bắt buộc phải có 2 class cùng lúc mới xài được style này*/
.btn.btn--main:hover {
  background-color: #0027ff;
}
.btn.btn--size-s {
  height: 32px;
  font-size: 12px;
  font-family: arial;
  padding: 0 8px;
}
.btn.btn--disabled {
  color: #949494;
  cursor: default;
  background-color: #c3c3c3;
} /*vô hiệu hóa nút sau khi hành động*/

/*---------------------AUTHEN MODAL-----------------------------*/
/*header*/
.auth-form {
  width: 500px;
  background-color: var(--white);
  overflow: hidden;
  border-radius: 4px;
}
.auth-form__container {
  padding: 0 32px 0 32px;
}
.auth-form__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 12px;
}
.auth-form__heading {
  font-size: 2.2rem;
  font-weight: 400;
  color: var(--text-color);
  margin: 22px 0;
  font-family: arial;
}
.auth-form__switch-btn {
  font-size: 1.6rem;
  color: #3f51b5;
  font-weight: 400;
  font-family: arial;
  cursor: pointer;
}
.auth-form__switch-btn:hover {
  color: #0027ff;
}
/*form*/
.auth-form__input {
  margin-top: 16px;
  width: 100%;
  height: 40px;
  padding: 0 12px;
  font-size: 1.4rem;
  border: 1px solid #dbdbdb;
  border-radius: 4px;
  outline: none;
}
.auth-form__input:hover {
  border: 1px solid #9c9c9c;
}
.auth-form__input:focus {
  border-color: #333;
}

/*policy*/
.auth-form__aside {
  margin-top: 30px;
}
.auth-form__policy-text {
  font-size: 1.2rem;
  font-family: arial;
  line-height: 1.8rem;
  text-align: center;
  padding: 0 12px;
}
.auth-form__text-link {
  font-family: arial;
  text-decoration: none;
  color: #3f51b5;
}
.auth-form__text-link:hover {
  color: #0027ff;
  text-decoration: underline #0027ff;
}

/*control button*/
.auth-form__controls {
  margin-top: 60px;
  display: flex;
  justify-content: flex-end;
}
.auth-form__controls--back {
  margin-right: 8px;
}

/*socials button*/
.auth-form__login-icon {
  position: absolute;
  top: 14.1rem;
  right: 5rem;
  font-size: 1.4rem;
  color: #a1a1a1;
  cursor: pointer;
}
.auth-form__register-icon {
  position: absolute;
  top: 14.1rem;
  right: 5rem;
  font-size: 1.4rem;
  color: #a1a1a1;
  cursor: pointer;
}
.auth-form__group i:hover {
  color: #4e4e4e;
}
.auth-form__socials {
  background-color: #f5f5f5;
  padding: 16px 32px;
  display: flex;
  justify-content: space-between;
  margin-top: 24px;
}
.auth-form__socials-icon {
  font-size: 1.8rem;
}
.auth-form__socials--facebook {
  color: var(--white);
  background-color: #3a5a98;
}
.auth-form__socials--facebook .auth-form__socials-icon {
  color: var(--white);
}
.auth-form__socials--facebook span {
  color: var(--white);
}
.auth-form__socials-tittle {
  margin: 0 36px;
}
.auth-form__socials--google {
  background-color: var(--white);
  color: #666;
  border: 1px solid rgba(0, 0, 0, 0.3);
}
.auth-form__socials--google .auth-form__socials-icon {
  color: var(--text-color);
}
.auth-form__help {
  display: flex;
  justify-content: flex-end;
}
.auth-form__help-link {
  text-decoration: none;
  color: #939393;
  font-size: 1.3rem;
}
.auth-form__help-link:hover {
  text-decoration: underline;
}
.auth-form__separate {
  display: block;
  border: 1px solid var(--boder-color);
  height: 12px;
  margin: 0 12px;
  transform: translateY(50%);
}
.auth-form__help-forgot {
  color: #3f51b5;
}

